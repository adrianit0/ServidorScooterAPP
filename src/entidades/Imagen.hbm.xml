<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="entidades.Imagen" table="imagen" catalog="scooterapp" optimistic-lock="version">
        <id name="id" type="java.lang.Integer">
            <column name="id" />
            <generator class="identity" />
        </id>
        <many-to-one name="incidencia" class="entidades.Incidencia" fetch="select">
            <column name="incidencia_id" not-null="true" />
        </many-to-one>
        <property name="nombre" type="string">
            <column name="nombre" length="30" not-null="true" />
        </property>
        <property name="url" type="string">
            <column name="url" length="30" not-null="true" />
        </property>
    </class>
</hibernate-mapping>
