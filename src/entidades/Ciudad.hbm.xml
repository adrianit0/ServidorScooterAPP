<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="entidades.Ciudad" table="ciudad" catalog="scooterapp" optimistic-lock="version">
        <id name="id" type="java.lang.Integer">
            <column name="id" />
            <generator class="identity" />
        </id>
        <property name="nombre" type="string">
            <column name="nombre" length="30" not-null="true" />
        </property>
        <property name="provincia" type="string">
            <column name="provincia" length="30" not-null="true" />
        </property>
        <set name="sedes" table="sede" inverse="true" lazy="true" fetch="select">
            <key>
                <column name="ciudad_id" not-null="true" />
            </key>
            <one-to-many class="entidades.Sede" />
        </set>
        <set name="empleados" table="empleado" inverse="true" lazy="true" fetch="select">
            <key>
                <column name="ciudad_id" not-null="true" />
            </key>
            <one-to-many class="entidades.Empleado" />
        </set>
    </class>
</hibernate-mapping>
